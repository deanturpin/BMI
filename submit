#!/bin/bash

cat <<MIME
Content-Type: text/plain
Access-Control-Allow-Origin: *

MIME

[[ $QUERY_STRING == '' ]] && echo no query && exit

db=weights.csv
date=$(date +%Y/%m/%d)

if [[ $(grep $date $db) ]]; then
	echo already submitted today
else
	echo -e "$date,\t$QUERY_STRING\n" >> $db
	cat '<pre>' $db '</pre>'

	# height=182
	# echo $(( (753 / ((182 * 182) / (100 * 100))) / 10 ))
fi

